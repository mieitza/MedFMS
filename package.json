{
  "name": "medfms",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Medical Fleet Management System",
  "workspaces": [
    "app/backend",
    "app/frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev -w @medfms/backend",
    "dev:frontend": "npm run dev -w @medfms/frontend",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "npm run build -w @medfms/backend",
    "build:frontend": "npm run build -w @medfms/frontend",
    "start": "npm run start -w @medfms/backend",
    "lint": "npm run lint -ws --if-present",
    "format": "npm run format -ws --if-present",
    "check": "npm run check -w @medfms/frontend",
    "db:migrate": "npm run db:migrate -w @medfms/backend",
    "db:seed": "npm run db:seed -w @medfms/backend",
    "db:status": "npm run db:status -w @medfms/backend",
    "clean": "rm -rf node_modules app/*/node_modules app/*/dist app/*/.svelte-kit",
    "reset": "npm run clean && npm install"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "xlsx": "^0.18.5"
  }
}
